<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>vidya.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoggedInServlet</servlet-name>
    <servlet-class>vidya.LoggedInServlet</servlet-class>
  </servlet>
    <servlet>
    <servlet-name>InsertServlet</servlet-name>
    <servlet-class>vidya.InsertServlet</servlet-class>
  </servlet>
    <servlet>
    <servlet-name>InsertedServlet</servlet-name>
    <servlet-class>vidya.InsertedServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReviewServlet</servlet-name>
    <servlet-class>vidya.ReviewServlet</servlet-class>
  </servlet>
<servlet>
    <servlet-name>ReviewedServlet</servlet-name>
    <servlet-class>vidya.ReviewedServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoggedInServlet</servlet-name>
    <url-pattern>/loggedIn</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>InsertServlet</servlet-name>
    <url-pattern>/create</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>InsertedServlet</servlet-name>
    <url-pattern>/submitted</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReviewServlet</servlet-name>
    <url-pattern>/submitReview</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InsertedServlet</servlet-name>
    <url-pattern>/submittedReview</url-pattern>
  </servlet-mapping>
 
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>CreateAccount.html</welcome-file>
    <welcome-file>CreateReview.html</welcome-file>
    <welcome-file>Review.html</welcome-file>
  </welcome-file-list>
  
</web-app>
